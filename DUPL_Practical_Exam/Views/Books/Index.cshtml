@model IEnumerable<DUPL_Practical_Exam.Models.Book>

@{
    ViewBag.Title = "Index";
    var i = 0;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between mb-1">
            <a href="@Url.Action("Create", "Books")" class="btn btn-warning btn-sm"><i class="bi bi-plus"></i> Create New</a>
            <button type="button" id="recordCountBtn" class="btn btn-primary">
                Total Record(s) <span class="badge badge-light">0</span>
            </button>
        </div>
        <table class="table table-bordered table-striped">
            <thead class="">
                <tr class="text-center">
                    <th>SI#</th>
                    <th>Book Name</th>
                    <th>Author Name</th>
                    <th>Date</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@(++i)</td>
                        <td>@a.BookName</td>
                        <td>@a.AuthorName</td>
                        <td>@a.Date.ToString("dd-MM-yyyy")</td>
                        <td>@a.Quantity</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", "Books", new {id=a.BookId})" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                            <a href="javascript:void(0);" onclick="deleteBook(@a.BookId)" class="btn btn-danger btn-sm deleteBtn"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section styles
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}

@section scripts
{
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script>
        $(document).ready(function () {
            function updateRecordCount() {
                var recordCount = $("table tbody tr").length;
                $("#recordCountBtn .badge").text(recordCount);
            }
            updateRecordCount();

        });
        function deleteBook(id) {
            $.ajax({
                url: '@Url.Action("Delete", "Books")/' + id,
                type: 'POST',
                success: function (result) {
                    alert(result.message);
                    window.location.reload();
                },
                error: function () {
                    alert("Error occurred while deleting the record.");
                }
            });
        
    }
    </script>
}
